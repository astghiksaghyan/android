<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSlide_1"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/Slide2ImageSize"
            android:layout_height="@dimen/Slide1ImageSize"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cook_master_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/Slide2TextWidth"
            android:layout_height="@dimen/Slide2TextWidth"
            android:layout_gravity="center_horizontal"
            android:text="@string/you_can_instantly_choose_your_desired_dishes_see_your_balance_make_payments_as_well_as_track_your_expenses"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/Slide2TextSize" />
    </LinearLayout>

</LinearLayout>